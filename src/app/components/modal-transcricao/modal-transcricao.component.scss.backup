  }
}

// Footer do modal fixo na parte inferior
.modal-footer {
  flex-shrink: 0;
  padding: 15px 20px;
  background: #f8f9fa;
  border-top: 1px solid #e0e0e0;
  display: flex;
  justify-content: flex-end;
  gap: 10px;

  .btn {
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;

    &.btn-secundario {
      background: #6c757d;
      color: white;

      &:hover {
        background: #5a6268;
      }
    }

    &.btn-primario {
      background: #28a745;
      color: white;

      &:hover {
        background: #218838;
      }
    }
  }
}

// Estilos para o estado maximizado
.modal-overlay.maximizado {
  z-index: 10000; // Garantir que fique por cima de tudo
}

.modal-content.maximizado {
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  width: 100vw !important;
  height: 100vh !important;
  max-width: none !important;
  max-height: none !important;
  margin: 0 !important;
  border-radius: 0 !important;
  z-index: 10001;
  transform: none !important;

  .modal-header {
    border-radius: 0;
  }

  .modal-body {
    height: calc(100vh - 140px) !important; // Descontar header e footer
  }

  .modal-footer {
    border-radius: 0;
  }
}

// ==================== EDI칂츾O DE LOCUTOR ====================
.edicao-locutor-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
