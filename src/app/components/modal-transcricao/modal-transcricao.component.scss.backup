  .modal-content {
    padding: 0 1rem 1rem 1rem;
  }

  .dialogo-item {
    padding: 1rem;

    .dialogo-header {
      flex-direction: column;
      gap: 0.75rem;
      align-items: flex-start;

      .dialogo-actions {
        align-self: flex-end;
      }
    }

    .participante-section {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;

      .participante-editor {
        width: 100%;

        .select-participante {
          min-width: auto;
          width: 100%;
        }
      }
    }
  }

  .modal-footer {
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;

    .footer-info {
      text-align: center;

      .transcription-info {
        flex-direction: column;
        gap: 0.5rem;
      }

      .quality-indicator {
        justify-content: center;
      }
    }

    .footer-acoes {
      justify-content: center;
      flex-wrap: wrap;
    }
  }
}

@media (max-width: 480px) {
  .modal-header {
    .header-info h2 {
      font-size: 1rem;
    }
  }

  .participants-map .participants-tags .participant-tag {
    .tag-info {
      .tag-nome {
        font-size: 0.8rem;
      }
    }
  }

  .dialogo-content .content-editor .editor-toolbar {
    flex-direction: column;
    gap: 1rem;

    .editor-tools {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
  }
}

// ==================== ESTILOS ESPEC칈FICOS PARA O MODAL ATUAL ====================

// Modal com rolagem controlada
.modal-overlay {
  &.modal-visible {
    display: flex;
  }
  
  &:not(.modal-visible) {
    display: none;
  }
}

// Corpo do modal com rolagem interna
.modal-body {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding: 0;
}

// Se칞칚o de busca fixa no topo
.secao-busca {
  flex-shrink: 0;
  padding: 15px 20px;
  background: #f8f9fa;
  border-bottom: 1px solid #e0e0e0;

  .campo-busca {
    .input-busca {
      width: 100%;
      padding: 10px 15px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 14px;
      transition: border-color 0.3s ease;

      &:focus {
        outline: none;
        border-color: #3498db;
      }
    }
  }
}

// Container principal com layout flex칤vel
.container-principal {
  flex: 1;
  display: flex;
  overflow: hidden;
}

// 츼rea dos di치logos com rolagem pr칩pria
.area-dialogos {
  flex: 1;
  padding: 6px 8px;
  overflow-y: auto;
  overflow-x: hidden;
  max-height: 100%;

  .dialogo-item {
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    margin-bottom: 10px;
    overflow: hidden;
    transition: all 0.3s ease;

    &:hover {
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      transform: translateY(-1px);
    }

    &.dialogo-marcado {
      border-left: 4px solid #3498db;
      background: #f8f9ff;
    }

    .dialogo-header {
      background: #f8f9fa;
      padding: 4px 8px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #e0e0e0;

      .dialogo-identificacao {
        display: flex;
        align-items: center;
        flex: 1;
      }

      .dialogo-participante {
        font-weight: 600;
        color: #8f8f8f;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        
        &:hover {
          color: #3498db;
          background: rgba(52, 152, 219, 0.1);
          padding: 3px 6px;
          border-radius: 4px;
        }
      }

      .dialogo-acoes {
        display: flex;
        gap: 8px;

        .btn-editar {
          background: #3498db;
          color: white;
          border: none;
          padding: 6px 12px;
          border-radius: 4px;
          font-size: 12px;
          cursor: pointer;
          transition: background-color 0.3s ease;

          &:hover {
            background: #2980b9;
          }
        }
      }

      .dialogo-acoes {
        display: flex;
        gap: 8px;

        .btn-editar {
          background: #3498db;
          color: white;
          border: none;
          padding: 6px 12px;
          border-radius: 4px;
          font-size: 12px;
          cursor: pointer;
          transition: background-color 0.3s ease;

          &:hover {
            background: #2980b9;
          }
        }
      }
    }

    .dialogo-conteudo {
      padding: 12px;
      line-height: 1.5;
      color: #2c3e50;
      font-size: 15px;
      font-weight: 500;
      background: rgba(52, 152, 219, 0.02);
      border-radius: 3px;
    }

    .dialogo-footer {
      padding: 2px 4px;
      background: #f8f9fa;
      border-top: 1px solid #e0e0e0;

      .texto-alteracoes {
        color: #7f8c8d;
        font-size: 12px;
      }
