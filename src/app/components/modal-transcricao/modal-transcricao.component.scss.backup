}

// Painel lateral com rolagem pr칩pria
.painel-lateral {
  width: 300px;
  flex-shrink: 0;
  background: #f8f9fa;
  border-left: 1px solid #e0e0e0;
  display: flex;
  flex-direction: column;
  overflow: hidden;

  .secao-participantes,
  .secao-historico,
  .secao-estatisticas {
    padding: 15px;
    border-bottom: 1px solid #e0e0e0;

    h3 {
      margin: 0 0 10px 0;
      font-size: 16px;
      color: #2c3e50;
      font-weight: 600;
    }
  }

  .secao-participantes {
    .lista-participantes {
      .participante-item {
        background: white;
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 8px;
        border: 1px solid #e0e0e0;

        .participante-nome {
          font-weight: 500;
          color: #2c3e50;
          display: block;
          font-size: 14px;
        }

        .participante-tipo {
          color: #7f8c8d;
          font-size: 12px;
        }
      }
    }
  }

  .secao-historico {
    flex: 1;
    overflow: hidden;
    display: flex;
    flex-direction: column;

