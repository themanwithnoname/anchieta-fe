      .editor-tools {
        display: flex;
        align-items: center;
        gap: 0.5rem;

        .tool-btn {
          background: #ecf0f1;
          border: none;
          width: 32px;
          height: 32px;
          border-radius: 6px;
          cursor: pointer;
          display: flex;
          align-items: center;
          justify-content: center;
          color: #7f8c8d;
          transition: all 0.3s ease;
          font-size: 0.85rem;

          &:hover {
            background: #3498db;
            color: white;
            transform: scale(1.1);
          }
        }

        .separator {
