  background: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  backdrop-filter: blur(2px);
}

.container-principal.modo-edicao-locutor {
  .area-dialogos {
    opacity: 0.3;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }
}

.dialogo-participante.editavel {
